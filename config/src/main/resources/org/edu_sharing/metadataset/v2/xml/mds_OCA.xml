<metadataset id="default" label="default" hidden="false">
		<name>Core Metadataset</name>
		<i18n>mds_translation</i18n>
	<widgets>
      <widget>
                <id>title</id>
                <caption>Title</caption>
                <placeholder>z.B. Goethe</placeholder>
                <type>text</type>
      </widget>

	  
  </widgets>

		<templates>
			<template>
				<id>search</id>
				<html><![CDATA[
              <title>
			  ]]></html>
			</template>
		</templates>
		<sorts>
			<sort>
				<id>search</id>
				<default>
					<sortBy>score</sortBy>
					<sortAscending>false</sortAscending>
				</default>
				<!-- no columns because we currently don't support sorting for this repository -->
			</sort>
		</sorts>
		<groups>
			<group>
				<id>ngsearch</id>
				<views>
					<view>search</view>
				</views>
			</group>
		</groups>
</metadataset>