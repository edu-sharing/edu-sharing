<metadataset id="default" label="default" hidden="false">
		<name>Pixabay Metadataset</name>
		<inherit>mds</inherit>
		<i18n>mds_pixabay</i18n>
		<widgets>
			<widget>
				<id>editors_choice</id>
				<caption>editors_choice</caption>
				<type>checkbox</type>
			</widget>
			<widget>
				<id>image_type</id>
				<caption>image_type</caption>
				<type>radioVertical</type>
				<defaultvalue>all</defaultvalue>
				<valuespace_i18n_prefix>type_</valuespace_i18n_prefix>
				<values>
					<value>all</value>
					<value>photo</value>
					<value>illustration</value>
					<value>vector</value>
				</values>
			</widget>
			<widget>
				<id>orientation</id>
				<caption>orientation</caption>
				<type>radioVertical</type>
				<defaultvalue>all</defaultvalue>
				<valuespace_i18n_prefix>type_</valuespace_i18n_prefix>
				<values>
					<value>all</value>
					<value>horizontal</value>
					<value>vertical</value>
				</values>
			</widget>
		</widgets>
		<sorts>
			<sort>
				<id>search</id>
				<default>
					<sortBy>score</sortBy>
					<sortAscending>false</sortAscending>
				</default>
				<columns>
					<column mode="descending">score</column>
					<column mode="descending">cm:modified</column>
				</columns>
			</sort>
		</sorts>
		<lists>
			<list>
				<id>search</id>
				<columns>
					<column>cm:title</column>
					<column>cm:creator</column>
					<column>ccm:commonlicense_key</column>
					<column>ccm:replicationsource</column>				
				</columns>
			</list>
		</lists>
		<templates>
			<template>
				<id>search</id>
				<html><![CDATA[
              <editors_choice>
              <image_type>
              <orientation>
				]]></html>
			</template>
			<template>
				<id>node_general_render</id>
				<caption>tab_basic</caption>
				<html><![CDATA[
              <cclom:title>
              <cclom:general_keyword>
              <license>
              <cclom:general_description>
              <sys:node-uuid>
              <ccm:lifecyclecontributer_author>
				]]></html>
			</template>
		</templates>
		<groups>
			<group>
				<id>ngsearch</id>
				<views>
					<view>search</view>
				</views>
			</group>
			<group>
				<id>io_render</id>
				<views>
					<view>node_general_render</view>
				</views>
			</group>
			<group>
				<id>io_render_inline</id>
				<views>
					<view>node_general_render</view>
				</views>
			</group>
		</groups>
</metadataset>