<metadataset id="default" label="default" hidden="false">
		<name>Brockhaus Metadataset</name>
		<inherit>mds</inherit>
		<i18n>mds_brockhaus</i18n>
		<widgets>
			<widget>
				<id>src</id>
				<caption>src</caption>
				<type>radioVertical</type>
				<defaultvalue>ecs</defaultvalue>
				<valuespace_i18n_prefix>src_</valuespace_i18n_prefix>
				<values>
					<value>ecs</value>
					<value>ecs.julex</value>
				</values>
			</widget>
		</widgets>
		<sorts>
			<sort>
				<id>search</id>
				<default>
					<sortBy>score</sortBy>
					<sortAscending>false</sortAscending>
				</default>
				<!-- no columns because we currently don't support sorting for this repository -->
			</sort>
		</sorts>
		<lists>
			<list>
				<id>search</id>
				<columns>
					<column>cm:title</column>
					<column>cclom:general_description</column>
					<column>ccm:replicationsource</column>
				</columns>
			</list>
		</lists>
		<templates>
			<template>
				<id>search</id>
				<html><![CDATA[
              <src>
				]]></html>
			</template>
		</templates>
		<groups>
			<group>
				<id>ngsearch</id>
				<views>
					<view>search</view>
				</views>
			</group>
		</groups>
</metadataset>